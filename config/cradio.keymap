#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>
#include "halcyoncorsair.h"

&lt {
    tapping-term-ms = <150>;
    flavor = "tap-preferred";
};

&sk {
     release-after-ms = <1000>;
     quick-release;
};

&sl {
    /delete-property/ quick-release;
};

/ {
    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <250>;
            quick_tap_ms = <0>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
        ss: sticky_shift {
            compatible = "zmk,behavior-hold-tap";
            label = "STICKY_SHIFT";
            #binding-cells = <2>;
            tapping-term-ms = <150>;
            quick_tap_ms = <0>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&sk>;
        };
    };

    combos {
        #include "combos.def"
    };

    keymap {
        compatible = "zmk,keymap";

        base_layer {
                        bindings = <
    &kp Q       &kp W       &kp F       &kp P       &kp B              &kp J       &kp L       &kp U       &kp Y       &kp SQT 
    &hm X_A     &hm X_R     &hm X_S     &hm X_T     &kp G              &kp M       &hm X_N     &hm X_E     &hm X_I     &hm X_O   
    &kp Z       &kp X       &kp C       &kp D       &kp V              &kp K       &kp H       &kp COMMA   &kp DOT     &kp FSLH
                                        &lt NUM_BCK &ss LSHIFT LSHIFT  &kp SPC     &lt NAV_ENT
                        >;
                };
        numpad_layer {
                        bindings = <
    &none       &none       &none       &none       &none               &kp EQUAL    &kp N7      &kp N8      &kp N9      &kp KP_DOT     
    &kp LGUI    &kp LALT    &kp LCTRL   &kp LSHFT   &none               &kp KP_PLUS  &kp N4      &kp N5      &kp N6      &kp KP_MULTIPLY
    &none       &none       &none       &none       &sl _FUNC           &kp KP_MINUS &kp N1      &kp N2      &kp N3      &kp KP_DIVIDE  
                                        &trans      &trans              &kp N0       &trans
                        >;
                };
        function_layer {
                        bindings = <
    &none       &none       &none       &none       &none              &none       &kp F7      &kp F8      &kp F9      &kp F12
    &kp LGUI    &kp LALT    &kp LCTRL   &kp LSHFT   &none              &none       &kp F4      &kp F5      &kp F6      &kp F11
    &none       &none       &none       &none       &sl _FUNC          &none       &kp F1      &kp F2      &kp F3      &kp F10
                                        &trans      &trans             &trans      &trans
                        >;
                };
        nav_layer {
                        bindings = <
    &kp INS     &kp HOME    &kp UP      &kp END     &kp PG_UP          &kp C_MUTE   &none       &none       &none       &none
    &kp X_SELA  &kp LEFT    &kp DOWN    &kp RIGHT   &kp PG_DN          &kp C_VOL_UP &kp RSHFT   &kp RCTRL   &kp LALT    &kp RGUI  
    &kp X_UNDO  &kp X_CUT   &kp X_COPY  &kp X_PAST  &kp X_REDO         &kp C_VOL_DN &kp C_PREV  &kp C_PP    &kp C_NEXT  &kp C_STOP
                                        &trans      &trans             &trans       &trans
                        >;
                };
        system_layer {
                        bindings = <
    &bootloader     &reset          &out OUT_USB    &out OUT_BLE        &none              &none            &out OUT_BLE    &out OUT_USB    &reset          &bootloader
    &none           &none           &none           &none               &none              &none            &none           &none           &none           &none
    &none           &bt BT_SEL 2    &bt BT_SEL 1    &bt BT_SEL 0        &bt BT_CLR         &bt BT_CLR       &bt BT_SEL 0    &bt BT_SEL 1    &bt BT_SEL 2    &none
                                                    &trans              &trans             &trans           &trans
                        >;
                };
        };
};

compatible = "zmk,combos";

#define COMBO(NAME, BINDINGS, KEYPOS, TIMEOUT, LAYERS) \
  combo_##NAME { \
    bindings = <BINDINGS>; \
    key-positions = <KEYPOS>; \
    timeout-ms = <TIMEOUT>; \
    layers = <LAYERS>; \
  };

/* Brackets */

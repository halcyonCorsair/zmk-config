compatible = "zmk,combos";

#define COMBO(NAME, BINDINGS, KEYPOS, TIMEOUT, LAYERS) \
  combo_##NAME { \
    bindings = <BINDINGS>; \
    key-positions = <KEYPOS>; \
    timeout-ms = <TIMEOUT>; \
    layers = <LAYERS>; \
  };

/* Brackets */
COMBO(lbrk, &kp LBKT,  2  4, 30, _BASE _SYMB)
COMBO(rbrk, &kp RBKT,  7  9, 30, _BASE _SYMB)
